<powershell>
#Install IIS
Install-WindowsFeature -name Web-Server -IncludeManagementTools

#Start the IIS service
Start-Service -Name W3SVC

#Set upa basic HTML page to test the web server
$webpagePath = "C:\inetpub\wwwroot\index.html"
@"
<!DOCTYPE html>
<html>
<head>
    <title>Web Server Test</title>
</head>
<body>
    <h1>Welcome to IIS Web Server</h1>
    <p>This is a basic HTML page to test the web server.</p>
</body>
</html>
"@ | Out-File -FilePath $webpagePath

#Restart the IIS service
Restart-Service -Name W3SVC
</powershell>